{
    "name": "react-boiler-plate",
    "version": "1.0.0",
    "description": "configured boilerplate for react",
    "main": "index.js",
    "scripts": {
        "build": "",
        "lint": "NODE_ENV=test jest --config test/jest.lint.js",
        "prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
        "format": "npm run prettier -- --write",
        "clean": "rm -rf dist",
        "check-types": "tsc --noEmit true",
        "check-format": "npm run prettier -- --list-different",
        "validate": "npm-run-all --parallel check-types check-format",
        "test:no-watch": "NODE_ENV=test jest",
        "postinstall": "husky install",
        "local": "webpack serve",
        "test:watch": "NODE_ENV=test jest --watch",
        "test": "is-ci \"test:coverage\"  \"test:watch\"",
        "test:debug": "NODE_ENV=test  node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
        "test:coverage": "NODE_ENV=test  jest --coverage"
    },
    "jest-runner-eslint": {
        "cliOptions": {
            "ignorePath": "./.gitignore"
        }
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@babel/cli": "^7.12.16",
        "@babel/core": "^7.12.16",
        "@babel/plugin-proposal-optional-chaining": "^7.12.16",
        "@babel/plugin-transform-runtime": "^7.12.15",
        "@babel/preset-env": "^7.12.16",
        "@babel/preset-react": "^7.12.13",
        "@emotion/jest": "^11.2.0",
        "@testing-library/jest-dom": "^5.11.9",
        "@testing-library/react": "^11.2.5",
        "@testing-library/user-event": "^12.7.1",
        "@types/jest": "^26.0.20",
        "@types/react": "^17.0.2",
        "@types/react-dom": "^17.0.1",
        "@typescript-eslint/eslint-plugin": "^4.15.0",
        "@typescript-eslint/parser": "^4.15.0",
        "babel-loader": "^8.2.2",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^7.2.0",
        "html-webpack-plugin": "^5.1.0",
        "husky": "^5.0.9",
        "is-ci-cli": "^2.2.0",
        "jest": "^26.6.3",
        "jest-runner-eslint": "^0.10.0",
        "jest-watch-select-projects": "^2.0.0",
        "jest-watch-typeahead": "^0.6.1",
        "lint-staged": "^10.5.4",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "ts-jest": "^26.5.1",
        "ts-loader": "^8.0.17",
        "typescript": "^4.1.5",
        "webpack": "^5.22.0",
        "webpack-cli": "^4.5.0",
        "webpack-dev-server": "^3.11.2"
    },
    "dependencies": {
        "@babel/runtime": "^7.12.13",
        "emotion": "^11.0.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1"
    }
}
